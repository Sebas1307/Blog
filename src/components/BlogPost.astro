---
import FormattedDate from './FormattedDate.astro'

interface Props {
  title: string;
  pubDate: Date;
  heroImage: string;
  slug: string;
  categories: string[];
}

const { title, pubDate, heroImage, slug, categories } = Astro.props;
---

<article 
  class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300 mb-4"
  transition:animate="fade"
  data-categories={JSON.stringify(categories)}
>
  <a href={`/blog/${slug}/`} class="block">
    <div class="relative aspect-video">
      <img
        width={720}
        height={360}
        src={heroImage}
        alt={title}
        class="w-full h-full object-cover"
        transition:animate="slide"
      />
    </div>
    <div class="p-4 sm:p-6">
      <div class="flex flex-wrap gap-2 mb-3">
        {categories.map((category) => (
          <span 
            class="px-2 py-1 text-xs sm:text-sm bg-blue-100 text-blue-800 rounded-full"
            transition:animate="fade"
          >
            {category}
          </span>
        ))}
      </div>
      <h6 
        class="mb-2 text-lg sm:text-xl font-semibold line-clamp-4 text-black"
        transition:animate="slide"
      >
        {title}
      </h6>
      <p 
        class="text-gray-600 text-sm sm:text-base"
        transition:animate="fade"
      >
        <FormattedDate date={pubDate} />
      </p>
    </div>
  </a>
</article> 