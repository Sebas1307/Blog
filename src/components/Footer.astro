---
import { SOCIAL_LINKS } from '../consts'

const today = new Date()
const socialLinks = SOCIAL_LINKS
---

<footer class='bg-gray-100 mt-16'>
  <div class='container mx-auto px-4 py-8'>
    <div class='flex flex-col md:flex-row justify-between items-center'>
      <div class='mb-4 md:mb-0'>
        <p class='text-gray-600'>
          &copy; {today.getFullYear()} Sebastian Pati√±o | Blog. Todos los derechos reservados.
        </p>
      </div>

      <div class='flex space-x-6'>
        {
          socialLinks.map((link) => (
            <a
              href={link.href}
              class='text-gray-600 hover:text-gray-900 !important transition-colors flex items-center gap-2'
              target='_blank'
              rel='noopener noreferrer'
            >
              <span>{link.icon}</span>
              <span class='hidden md:inline'>{link.text}</span>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>
