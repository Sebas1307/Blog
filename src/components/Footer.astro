---
import { SOCIAL_LINKS } from '../consts'

const today = new Date()
const socialLinks = SOCIAL_LINKS
---

<footer class='bg-gray-100 mt-16'>
  <div class='container mx-auto px-4 py-8 sm:py-12'>
    <div class='flex flex-col md:flex-row justify-between items-center gap-8 md:gap-6'>
      <div class='text-center md:text-left w-full md:w-auto'>
        <p class='text-gray-600 text-sm sm:text-base'>
          &copy; {today.getFullYear()} Sebastian Pati√±o | Blog. Todos los derechos reservados.
        </p>
      </div>

      <div class='flex flex-wrap justify-center gap-6 sm:gap-8 w-full md:w-auto'>
        {
          socialLinks.map((link) => (
            <a
              href={link.href}
              class='text-gray-600 hover:text-gray-900 transition-colors flex items-center gap-2 text-base sm:text-lg'
              target='_blank'
              rel='noopener noreferrer'
              aria-label={link.text}
            >
              <span class="text-xl sm:text-2xl">{link.icon}</span>
              <span class='hidden md:inline'>{link.text}</span>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>
