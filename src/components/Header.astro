---
const navItems = [
  { href: '/', text: 'Inicio' },
  { href: '/blog', text: 'Blog' },
  { href: '/videos', text: 'Videos' },
  { href: '/roadmaps', text: 'Rutas' },
  { href: '/recompensas', text: 'Recompensas' }
]

// Obtener la ruta actual
const currentPath = Astro.url.pathname;
---

<header class='header'>
  <nav class='container mx-auto px-4 py-4'>
    <div class='flex items-center justify-between w-full'>
      <!-- Columna izquierda: Nombre -->
      <div class='w-full md:w-1/3 flex justify-start'>
        <a
          href='/'
          class='text-lg sm:text-xl md:text-2xl font-bold'
        >
          Sebastian Patiño
        </a>
      </div>
      <!-- Columna centro: Menú -->
      <div class='hidden md:flex md:w-1/3 justify-center'>
        <div class='flex space-x-4 lg:space-x-8'>
          {
            navItems.map((item) => (
              <a
                href={item.href}
                class={`text-gray-600 hover:text-gray-900 transition-colors text-sm lg:text-base ${
                  currentPath === item.href ? 'text-[#20ecaa] font-semibold' : ''
                }`}
              >
                {item.text}
              </a>
            ))
          }
        </div>
      </div>
      <!-- Columna derecha: Sobre mí o espacio vacío -->
      <div class='w-auto md:w-1/3 flex justify-end items-center space-x-2'>
        <a
          href='/about'
          class='text-gray-600 hover:text-gray-900 transition-colors hidden md:block text-sm lg:text-base'
        >
          Sobre mí
        </a>
        <a
          href="/agendar"
          class="ml-4 px-4 py-2 rounded bg-[#20ecaa] text-white font-semibold shadow hover:bg-[#1bc99a] transition-colors text-sm lg:text-base btn-agendar-movil whitespace-normal min-w-[120px] text-center break-words"
        >
          Agendar reunión
        </a>
        <button
          class='md:hidden ml-2 p-2 rounded bg-white shadow border border-gray-200 text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-400'
          id='menu-button'
          aria-label='Menú'
        >
          <svg
            class='w-7 h-7'
            fill='none'
            stroke='currentColor'
            viewBox='0 0 24 24'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              d='M4 6h16M4 12h16M4 18h16'
            >
            </path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Menú Móvil -->
    <div
      class='md:hidden hidden fixed inset-0 bg-white bg-opacity-100 z-[9999] shadow-lg transition-all duration-300'
      id='mobile-menu'
    >
      <div
        class='flex flex-col space-y-8 mt-24 px-8 bg-white rounded-2xl py-8 relative'
      >
        {/* Botón cerrar */}
        <button
          id='close-menu'
          class='absolute top-4 right-4 p-2 rounded-full hover:bg-gray-200 focus:outline-none'
          aria-label='Cerrar menú'
        >
          <svg
            xmlns='http://www.w3.org/2000/svg'
            fill='none'
            viewBox='0 0 24 24'
            stroke='currentColor'
            class='w-7 h-7 text-gray-700'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              d='M6 18L18 6M6 6l12 12'
            >
            </path>
          </svg>
        </button>
        {/* Enlaces */}
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class={`text-gray-700 hover:text-blue-600 transition-colors text-xl font-semibold px-6 ${
                currentPath === item.href ? 'text-[#20ecaa]' : ''
              }`}
            >
              {item.text}
            </a>
          ))
        }
        <a
          href='/about'
          class='text-gray-700 hover:text-blue-600 transition-colors text-xl font-semibold px-6'
        >
          Sobre mí
        </a>
        <a
          href="/agendar"
          class="ml-4 px-4 py-2 rounded bg-[#20ecaa] text-white font-semibold shadow hover:bg-[#1bc99a] transition-colors text-sm lg:text-base btn-agendar-movil whitespace-normal min-w-[120px] text-center break-words"
        >
          Agendar reunión
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('menu-button')
  const mobileMenu = document.getElementById('mobile-menu')
  const header = document.querySelector('.header')
  const closeMenu = document.getElementById('close-menu')

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden')
    document.body.classList.toggle('overflow-hidden')
  })

  closeMenu?.addEventListener('click', () => {
    mobileMenu?.classList.add('hidden')
    document.body.classList.remove('overflow-hidden')
  })

  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header?.classList.add('scrolled')
    } else {
      header?.classList.remove('scrolled')
    }
  })
</script>

<style>
  .header {
    position: sticky;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(8px);
    transition: all 0.3s ease;
  }

  .header.scrolled {
    background: rgba(255, 255, 255, 0.95);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  nav a {
    padding: 0.5em;
    color: var(--black);
    border-bottom: 2px solid transparent;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  nav a:hover {
    border-bottom-color: var(--accent);
  }

  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }

  @media (max-width: 768px) {
    .header {
      padding: 0.5em 0;
    }

    nav a {
      padding: 0.75em 0;
    }
  }

  .btn-agendar-movil {
    color: #fff !important;
  }
</style>
